root = true

[*]
end_of_line = lf
insert_final_newline = true
max_line_length = 100

[backend/**.py]
indent_style = space
indent_size = 4
emacs_py_project = backend
emacs_py_formatter = ruff
emacs_py_env = venv
# emacs_py_save_touch = infra/uwsgi.ini

[frontend/**.{js,jsx,svelte,ts}]
indent_style = space
indent_size = 2
# emacs_py_save_touch = frontend/package.json


[Makefile]
indent_style = tab
